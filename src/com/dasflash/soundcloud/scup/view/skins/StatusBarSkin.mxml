<?xml version="1.0" encoding="utf-8"?>
<s:Skin
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	>
	
	<fx:Script>
		<![CDATA[
			import com.dasflash.soundcloud.scup.events.ScupEvent;
		]]>
	</fx:Script>
	
	<fx:Metadata>
    	[HostComponent("com.dasflash.soundcloud.scup.view.StatusBar")]
    </fx:Metadata>

	<s:Line xTo="{width}">
		<s:stroke>
			<mx:SolidColorStroke weight="1" color="#404040"/>
		</s:stroke>
	</s:Line>
	
	<s:Rect width="100%" height="100%" top="1">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#bdbdbd" />
				<s:GradientEntry color="#969696" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
		
	<s:Button id="addTracksButton" label="+ Track(s)" top="6" bottom="6" left="12" styleName="standardButton"
		click="dispatchEvent(new ScupEvent(ScupEvent.BROWSE_FILES))"/>
	
	<s:HGroup  top="6" bottom="6" right="16">
		
		<s:Button id="cancelButton" label="Cancel" styleName="standardButton"
				  click="dispatchEvent(new ScupEvent(ScupEvent.CANCEL_SET))"/>
			
		<s:Button id="SendSetButton" label="Send Set" enabled="{hostComponent.allUploadsCompleted}" styleName="standardButton"
			click="dispatchEvent(new ScupEvent(ScupEvent.SAVE_SET))" />
		
	</s:HGroup>
	
</s:Skin>
